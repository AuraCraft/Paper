diff --git a/src/main/java/org/bukkit/Bukkit.java b/src/main/java/org/bukkit/Bukkit.java
index 8a4a00bc9c2da6a38a0a9e81dc13d047a125a810..641324bba716042dedd91caa1fed52a5183ebe35 100644
